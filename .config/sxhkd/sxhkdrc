#
# bspwm hotkeys
#

# Exit bspwm
super + alt + Escape
	$BSPWM_CONFIG/scripts/dmenu-logout

# Close window
alt + F4
	bspc window --close

# Close window
ctrl + q
	bspc window --close

# Navigate layouts
super + {_,shift + }space
	bspc desktop --layout {next,prev}

# Rotate desktop
super + {_,shift + }r
	bspc desktop --rotate {90,-90}

# Make split ratios equal
super + equal
	bspc desktop --balance

# Toogle dettach floating window
super + d
	bspc window --toggle floating

# Toogle pseudo tiling of window
super + p
	bspc window --toggle pseudo_tiled

# Toggle fullscreen of window
super + f
	bspc window --toggle fullscreen

# Focus last window/desktop
{alt,super} + Tab
	bspc {window,desktop} --focus last.local

# Swap window with last window
super + apostrophe
	bspc window --swap last

# Navigate to older/newer window in history
super + {o,n}
	bspc control --record-history off; \
	bspc window {older,newer} --focus; \
	bspc control --record-history on

# Move window to last manual split
super + y
	bspc window --to-window last.manual

# Focus/move window to the biggest space
super + {_,shift + }m
	bspc window --{focus,swap} biggest

# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

# Navigate windows
alt + {n,p}
	bspc window --focus {next,prev}

# Circulate the leaves of the tree
super + {comma,period}
	bspc desktop --circulate {backward,forward}

# Flip layout vertically/horizontally
super + {_,shift + }s
	bspc desktop --flip {vertical,horizontal}

# Preselect the splitting area for next window
super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

# Define splitting ratio for next window
super + ctrl + {1-9}
	bspc window --ratio 0.{1-9}

# Cancel preselection
super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop --cancel-presel}

# Resize window
super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}

# Resize window
super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}

# Move window to selected desktop
super + shift + {1-9,0}
	bspc window --to-desktop ^{1-9,10} --focus

# Move window to left/right desktop
super + shift + {Left,Right}
	bspc window --to-desktop {prev,next} --focus

# Move window to left/right desktop
ctrl + alt + shift + {Left,Right}
	bspc window --to-desktop {prev,next} --focus

# Focus selected desktop
super + {1-9,0}
	bspc desktop --focus ^{1-9,10}

# Focus left/right occupied desktop
super + {Left,Right}
	bspc desktop --focus {prev,next}.occupied

# Focus left/right occupied desktop
ctrl + alt + {Left,Right}
	bspc desktop --focus {prev,next}.occupied

# Toggle visibility of all windows
super + v
	bspc control --toggle-visibility

# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# Focus when clicking
~button1
	bspc pointer --grab focus

# Move/resize windows
alt + button{1-3}
	; bspc pointer --grab {move,resize_side,resize_corner}

# Ungrab when releasing a mouse button
alt + @button{1-3}
	bspc pointer --ungrab

#
# wm independent hotkeys
#

# Multimedia keys
{XF86AudioPrev,XF86AudioNext,XF86AudioStop,XF86AudioPlay}
	~/bin/mmkeys.sh --{prev,next,stop,play}

# Launch dmenu
alt + r
	~/bin/dmenu_run.sh -p 'Run:'


# Toggle visibility of systray
super + t
	$BSPWM_CONFIG/scripts/toggle-systray

# Lock the screen
ctrl + alt + l
	xautolock -enable; sleep 1; xautolock -locknow

# Launch terminal
super + Return
	urxvtc

# Emulate i3's scratchpad
F12
	xdotool search --onlyvisible --classname scratchpad windowunmap \
	|| xdotool search --classname scratchpad windowmap \
	|| urxvtc -name scratchpad -geometry 220x20+78+0

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
