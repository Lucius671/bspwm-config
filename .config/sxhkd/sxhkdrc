#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit && pkill panel

alt + F4
	bspc window --close

super + {_,shift + }space
	bspc desktop --layout {next,prev}

super + {_,shift + }r
	bspc desktop --rotate {90,-90}

super + equal
	bspc desktop --balance

super + {shift + f,f}
	bspc window --toggle {fullscreen,floating}

super + {grave,Tab}
	bspc {window,desktop} --focus last

super + apostrophe
	bspc window --swap last

super + {o,n}
	bspc control --record-history off; \
	bspc window {older,newer} --focus; \
	bspc control --record-history on

super + y
	bspc window --to-window last.manual

super + m
	bspc window --swap biggest

super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

alt + {_,shift + }c
	bspc window --focus {next,prev}

alt + Tab
	bspc window --focus last

super + {comma,period}
	bspc desktop --circulate {backward,forward}

super + {_,shift + }s
	bspc desktop --flip {horizontal,vertical}

super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop --cancel-presel}

super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window --ratio .{1-9}

super + shift + {1-9,0}
	bspc window --to-desktop ^{1-9,10} --focus

super + shift + {Left,Right}
	bspc window --to-desktop {prev,next} --focus

ctrl + alt + shift + {Left,Right}
	bspc window --to-desktop {prev,next} --focus

super + {1-9,0}
	bspc desktop --focus ^{1-9,10}

super + {Left,Right}
	bspc desktop --focus {prev,next}.occupied

ctrl + alt + {Left,Right}
	bspc desktop --focus {prev,next}.occupied

~button1
	bspc pointer --grab focus

alt + button{1-3}
	; bspc pointer --grab {move,resize_side,resize_corner}

alt + @button{1-3}
	bspc pointer --ungrab

#
# wm independent hotkeys
#

super + t
	xdotool search --onlyvisible --class "stalonetray" >/dev/null \
	&& xdotool search --class "stalonetray" windowunmap \
	|| xdotool search --class "stalonetray" windowmap windowraise

ctrl + alt + l
	xautolock -locknow

super + Return
	urxvtc

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
