#!/bin/sh

wid=$1
class=$2
instance=$3

# Parse instance
case "$instance" in
	libreoffice)
		printf "desktop=^5 follow=on"
		;;
	*)
		# Parse class
		case "$class" in
			*)
				# Parse window name
				name=$(xdotool getwindowname "$wid")
				case "$name" in
					Butter|Popcorn-Time)
						printf "desktop=^6 follow=on"
						;;
				esac
				;;
		esac
		;;
esac
