[global]
    font = Terminus 12
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x0-5-5"
    shrink = no
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = auto
    startup_notification = false
    icon_position = left
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:
    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab

[frame]
    width = 2
    color = "#1c1c1c"

[urgency_low]
    background = "#666666"
    foreground = "#111111"
    timeout = 3

[urgency_normal]
    background = "#f3f3f3"
    foreground = "#111111"
    timeout = 5

[urgency_critical]
    background = "#be67e1"
    foreground = "#f3f3f3"
    timeout = 0

[shortcuts]
    # Close notification.
    close = ctrl+space
    # Close all notifications.
    close_all = ctrl+shift+space
    # Redisplay last message(s).
    history = ctrl+grave
    # Context menu.
    context = ctrl+shift+period

